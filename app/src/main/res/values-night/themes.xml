<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinanceTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#FFB22C</item>
        <item name="colorPrimaryVariant">#854836</item>
        <item name="colorOnPrimary">#000000</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">#FFB22C</item>
        <item name="colorSecondaryVariant">#854836</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#F7F7F7</item>

        <!-- Error colors -->
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>

        <!-- Other colors -->
        <item name="android:textColor">#F7F7F7</item>
        <item name="android:windowBackground">#000000</item>

        <!-- Remove Action Bar and Status Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFB22C</item>
        <item name="colorPrimaryVariant">#854836</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>